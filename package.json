{
  "name": "react-hot-tsx",
  "version": "1.0.0",
  "description": "A demo for Typescript and React Hot Loader",
  "main": "index.js",
  "scripts": {
    "build": "webpack --env production",
    "build:dev": "webpack --env development",
    "start": "webpack-dev-server --env development --open",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "build-storybook": "build-storybook",
    "lint": "tslint src/**/*.tsx",
    "test": "jest --coverage",
    "test:clean": "rimraf ./coverage"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "collectCoverageFrom": [
      "src/components/**/*.{tsx}",
      "!src/**/*.test.{tsx}",
      "!src/**/*.stories.{tsx}"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": ".*\\.spec\\.tsx$"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@kadira/storybook": "^2.35.3",
    "@types/enzyme": "^2.7.2",
    "@types/jest": "^16.0.4",
    "@types/react": "^15.0.2",
    "@types/react-dom": "^0.14.21",
    "@types/react-hot-loader": "^3.0.1",
    "@types/webpack-env": "^1.13.0",
    "awesome-typescript-loader": "^3.0.0-beta.18",
    "clean-webpack-plugin": "^0.1.15",
    "enzyme": "^2.7.1",
    "html-webpack-plugin": "^2.26.0",
    "html-webpack-template": "^6.0.0",
    "http-server": "^0.9.0",
    "jest": "^18.1.0",
    "jest-enzyme": "^2.1.0",
    "react-addons-test-utils": "^15.4.2",
    "react-test-renderer": "^15.4.2",
    "ts-jest": "^18.0.2",
    "tslint": "^4.4.0",
    "tslint-loader": "^3.3.0",
    "tslint-react": "^2.3.0",
    "typescript": "^2.1.5",
    "webpack": "beta",
    "webpack-dev-middleware": "^1.9.0",
    "webpack-dev-server": "beta",
    "webpack-hot-middleware": "^2.15.0",
    "webpack-merge": "^2.4.0"
  },
  "dependencies": {
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-hot-loader": "beta",
    "styled-components": "^1.3.1"
  }
}
